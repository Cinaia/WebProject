<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/colorPrimary"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp"
    tools:context=".DetailActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@+id/pairNameText"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dayDetailVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="14dp"
        android:text="45.3554"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@+id/dayDetailText"
        app:layout_constraintRight_toRightOf="@+id/dayDetailText"
        app:layout_constraintTop_toBottomOf="@+id/dayDetailText" />

    <TextView
        android:id="@+id/weekDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="9dp"
        android:layout_row="2"
        android:text="За неделю"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintRight_toRightOf="@+id/pairNameText"
        app:layout_constraintTop_toBottomOf="@+id/pairNameText" />

    <TextView
        android:id="@+id/dayDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="43dp"
        android:text="За день"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/pairNameText"
        android:layout_marginRight="43dp"
        app:layout_constraintRight_toRightOf="@+id/pairNameText"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/pairNameText"
        app:layout_constraintHorizontal_bias="0.58"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/priceVal"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/btcPriceText"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_column="1"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_row="6"
        android:text="Цена в биткоинах:"
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textSize="14sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/volumeDetailText"
        app:layout_constraintRight_toLeftOf="@+id/btcPriceVal"
        android:layout_marginRight="8dp"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/utcTimeText" />

    <TextView
        android:id="@+id/weekDetailVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="44.314"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/priceVal"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintLeft_toLeftOf="@+id/weekDetailText"
        app:layout_constraintRight_toRightOf="@+id/weekDetailText"
        app:layout_constraintTop_toBottomOf="@+id/weekDetailText"
        app:layout_constraintVertical_bias="0.111" />

    <TextView
        android:id="@+id/volumeDetailText"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_column="0"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_row="1"
        android:text="Капитализация: "
        android:textColor="?android:attr/textColorSecondaryInverse"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/priceVal" />

    <TextView
        android:id="@+id/hourDetailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="9dp"
        android:text="За час"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.101"
        app:layout_constraintLeft_toLeftOf="@+id/pairNameText"
        app:layout_constraintRight_toLeftOf="@+id/dayDetailText"
        app:layout_constraintTop_toBottomOf="@+id/pairNameText" />

    <TextView
        android:id="@+id/volumeDetailVal"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:text="1278943"
        android:textColor="@android:color/background_light"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/priceVal" />

    <TextView
        android:id="@+id/btcPriceVal"
        android:layout_width="wrap_content"
        android:layout_height="17dp"

        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:text="44.655"
        android:textColor="@android:color/background_light"

        app:layout_constraintBottom_toTopOf="@+id/utcTimeText"

        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/volumeDetailVal"
        android:layout_marginEnd="8dp" />


    <TextView
        android:id="@+id/hourDetailVal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="11dp"
        android:text="43.5442"
        android:textColor="@android:color/holo_green_light"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/priceVal"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintLeft_toLeftOf="@+id/hourDetailText"
        app:layout_constraintRight_toRightOf="@+id/hourDetailText"
        app:layout_constraintTop_toBottomOf="@+id/hourDetailText"
        app:layout_constraintVertical_bias="0.069" />

    <TextView
        android:id="@+id/utcTimeText"
        android:layout_width="wrap_content"
        android:layout_height="26dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="8dp"
        android:alpha="1"
        android:text="Информация за "
        android:textColor="?attr/colorBackgroundFloating"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/priceVal"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="374dp"
        android:layout_height="215dp"
        android:layout_column="1"
        android:layout_row="3"
        android:alpha="0.3"
        app:srcCompat="@mipmap/logo"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/pairNameText"
        app:layout_constraintVertical_bias="1.0"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp" />

    <TextView
        android:id="@+id/pairNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="#753838"
        android:gravity="center"
        android:text="Bitcoin"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.086" />

    <TextView
        android:id="@+id/priceVal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/colorControlHighlight"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pairNameText"
        app:layout_constraintVertical_bias="0.231" />

</android.support.constraint.ConstraintLayout>