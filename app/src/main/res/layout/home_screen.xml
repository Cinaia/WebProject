<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".HomeActivity">

    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="42dp"
            app:srcCompat="@mipmap/btcicon"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintRight_toRightOf="@+id/imageView5"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="19dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView3" />


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="0dp"
            android:layout_height="39dp"
            android:alpha="4"
            app:srcCompat="@mipmap/ltcicon"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@+id/imageView4"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="46dp"
            app:srcCompat="@mipmap/ethicon"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toBottomOf="@+id/nvcVal"
            app:layout_constraintRight_toRightOf="@+id/imageView5"
            android:layout_marginTop="53dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="55dp"
            app:layout_constraintLeft_toLeftOf="@+id/imageView5"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="46dp"
            android:layout_height="44dp"
            app:srcCompat="@mipmap/nvcicon"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/editText"
            android:layout_marginStart="27dp"
            android:layout_marginTop="83dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="82dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="27dp"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/btcVal"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:fontFamily="sans-serif-condensed"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/ltcVal"
            android:layout_marginStart="38dp"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="33dp"
            app:layout_constraintLeft_toRightOf="@+id/imageView"
            android:layout_marginLeft="38dp" />

        <TextView
            android:id="@+id/ltcVal"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:fontFamily="sans-serif-condensed"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/ethVal"
            app:layout_constraintRight_toRightOf="@+id/btcVal"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="25dp"
            app:layout_constraintLeft_toLeftOf="@+id/btcVal"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/ethVal"
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:fontFamily="sans-serif-condensed"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintBottom_creator="1"
            app:layout_constraintBottom_toTopOf="@+id/nvcVal"
            app:layout_constraintRight_toRightOf="@+id/ltcVal"
            tools:layout_constraintLeft_creator="1"
            android:layout_marginBottom="33dp"
            app:layout_constraintLeft_toLeftOf="@+id/ltcVal"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/nvcVal"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:fontFamily="sans-serif-condensed"
            android:text="0"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            tools:layout_constraintTop_creator="1"
            tools:layout_constraintRight_creator="1"
            app:layout_constraintRight_toRightOf="@+id/ethVal"
            android:layout_marginTop="15dp"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="@+id/ethVal"
            app:layout_constraintTop_toTopOf="@+id/imageView5"
            app:layout_constraintHorizontal_bias="0.0" />

        <EditText
            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:text="Name"
            tools:layout_constraintTop_creator="1"
            android:layout_marginStart="60dp"
            android:layout_marginTop="39dp"
            app:layout_constraintTop_toBottomOf="parent"
            tools:layout_constraintLeft_creator="1"
            app:layout_constraintLeft_toLeftOf="parent" />


    </android.support.constraint.ConstraintLayout>

</ScrollView>